---

interface Props {
  title: string;
}

const { title } = Astro.props;

---

<html>
  <head>
    <title>{title}</title>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <style is:global>
      html {
        font-size: 18px;
      }
      
    </style>
    <slot name="head" />
  </head>
  <body>
    <slot />
  </body>
</html>