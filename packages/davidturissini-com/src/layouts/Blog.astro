---

import BaseLayout from './Base.astro';

interface Props {
  title: string;
}

const { title } = Astro.props;

---
<BaseLayout title={title}>
  <link slot="head" rel="stylesheet" href="/prism.css" type="text/css" />
  <style is:global slot="head">

    body {
      padding: 0 16px;
    }

    pre code[class] {
      font-size: 0.9rem;
    }
    
  </style>
  <main>
    <slot />
  </main>

</BaseLayout>